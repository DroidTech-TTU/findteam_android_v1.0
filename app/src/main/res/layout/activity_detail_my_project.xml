<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/find_team_orange"
    tools:context=".DetailMyProjectActivity">


    <TextView
        android:id="@+id/tvProjecTitleDetailProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:fontFamily="@font/roboto_black"
        android:text="Project Title"
        android:textColor="@color/white"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape_four_conners"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProjecTitleDetailProject">

        <Button
            android:id="@+id/btJoinProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_four_conners"
            android:padding="10dp"
            android:text="Join"
            android:textColor="@color/find_team_green_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btLeaveProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_four_conners"
            android:padding="10dp"
            android:text="Leave"
            android:textColor="@color/find_team_green_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ibGoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_four_conners"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_green_goback" />

        <ImageButton
            android:id="@+id/ibEditProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/shape_four_conners"
            android:padding="10dp"
            app:layout_constraintEnd_toStartOf="@+id/ibGoBack"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_green_edit" />

        <ImageButton
            android:id="@+id/ibDeleteProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_four_conners"
            android:padding="10dp"
            app:layout_constraintEnd_toStartOf="@+id/ibEditProject"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_green_delete" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGalleryDetailProject"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="10dp" />


    <TextView
        android:id="@+id/tvDescriptionMyDetailProjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/questrial"
        android:textColor="@color/white"
        android:text="Software.Enterprises, a
         subsidiary of Silicon Spectra, is one
         of the leading providers of Enterprise so
         ftware solutions, comprehensive IT solutions
         , including Systems Integration, Consulting,
         Information Systems outsourcing, IT-enabled
          services, telecommunication, RD etc. We spe
          cialize in placement of UI Developer
          s, ReactJS, AngularJS, Quality Assurance Analyst, Data Analyst, Software Developers, UX Engineers etc. in fields of healthcare, banking, and financial services, high-tech IT business, retail and e-commerce, insurance, entertainment, telecom and cable, pharmacy and life science, oil and gas, travel and transportation, and local and state government for both permanent and contract C2C staffing arrangements. Our recent placements include Apple, Google, Facebook, JPMC, Wells Fargo and several other fortune 500 companies."
        app:layout_constraintTop_toBottomOf="@+id/textViewDes"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tvStatusMyProjectDetailMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/questrial"
        android:text="In Pogress"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvGalleryDetailProject" />

    <ImageView
        android:id="@+id/ivStatusMyProjectDetail"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:paddingTop="5dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toStartOf="@+id/tvStatusMyProjectDetailMain"
        app:layout_constraintTop_toBottomOf="@+id/rvGalleryDetailProject"
        app:srcCompat="@drawable/ic_project_status_in_progress_green" />

    <TextView
        android:id="@+id/textViewDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/roboto_black"
        android:text="Description: "
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvGalleryDetailProject" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members"
        android:layout_margin="10dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tgDetailProject" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMembers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/tgDetailProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_four_conners_white"
        android:padding="10dp"
        app:container_border_color="@android:color/transparent"
        app:container_border_width="0dp"
        app:container_enable_drag="false"
        app:horizontal_interval="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDescriptionMyDetailProjects"
        app:tag_clickable="true"
        app:tag_theme="random"
        app:vertical_interval="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>