<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProjectActivity"
    android:background="@color/find_team_orange">


    <TextView
        android:id="@+id/textViewcp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:fontFamily="@font/roboto_black"
        android:text="Create Project"
        android:textColor="@color/white"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape_four_conners"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewcp1">

        <ImageButton
            android:id="@+id/ibSaveCreateProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/shape_four_conners"
            android:layout_marginRight="5dp"
            android:padding="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_save_24" />

        <ImageButton
            android:id="@+id/ibCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_four_conners"
            app:layout_constraintEnd_toStartOf="@+id/ibSaveCreateProject"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGallery"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/btAddPicture"
                tools:layout_editor_absoluteX="10dp" />

            <TextView
                android:id="@+id/textview19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Name: "
                android:layout_margin="10dp"
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvGallery" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/roboto_black"
                android:text="Description: "
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etProjectTitle" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/roboto_black"
                android:text="Tags: "
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etDescriptionCreateProject" />

            <EditText
                android:id="@+id/etProjectTitle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_four_conners_white"
                android:ems="10"
                android:hint="Project Name"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:windowSoftInputMode="adjustResize"
                app:layout_constraintStart_toEndOf="@+id/textview19"
                app:layout_constraintTop_toBottomOf="@+id/textview19" />

            <EditText
                android:id="@+id/etDescriptionCreateProject"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_four_conners_white"
                android:ems="10"
                android:gravity="top"
                android:hint="Descriptions"
                android:inputType="textMultiLine"
                android:paddingLeft="5dp"
                android:windowSoftInputMode="adjustResize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <EditText
                android:id="@+id/etTagsCreateProject"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_four_conners_white"
                android:ems="10"
                android:hint="Java"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:windowSoftInputMode="adjustResize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tgCreateProject" />

            <co.lujun.androidtagview.TagContainerLayout
                android:id="@+id/tgCreateProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_four_conners_white"
                android:padding="10dp"
                app:container_border_color="@android:color/transparent"
                app:container_border_width="0dp"
                app:container_enable_drag="false"
                app:horizontal_interval="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:tag_clickable="true"
                app:tag_theme="random"
                app:vertical_interval="10dp" />

            <ImageButton
                android:id="@+id/ibAddTag"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@color/find_team_orange"
                android:foregroundGravity="center"
                android:padding="5dp"
                app:layout_constraintStart_toEndOf="@+id/etTagsCreateProject"
                app:layout_constraintTop_toBottomOf="@+id/tgCreateProject"
                app:srcCompat="@drawable/ic_enter" />

            <Button
                android:id="@+id/btAddPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Picture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.556"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>