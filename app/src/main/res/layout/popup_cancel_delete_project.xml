<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shape_popup"
    android:elevation="10dp">

    <TextView
        android:id="@+id/tvPopup_Cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bai_jamjuree_medium"
        android:padding="10dp"
        android:text="Your project will be deleted!"
        android:textAlignment="center"
        android:textColor="@color/find_team_hover_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btYesCancelProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/shape_popup_button"
        android:fontFamily="@font/roboto_black"
        android:text="Yes"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btNoCancelProject"
        app:layout_constraintTop_toBottomOf="@+id/tvPopup_Cancel" />

    <Button
        android:id="@+id/btNoCancelProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_popup_button"
        android:fontFamily="@font/roboto_black"
        android:text="No"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPopup_Cancel" />
</androidx.constraintlayout.widget.ConstraintLayout>